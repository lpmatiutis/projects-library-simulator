{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    // "strict": true,
    // "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules"]
}

